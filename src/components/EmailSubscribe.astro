<div class="w-full max-w-md mx-auto p-4 bg-white dark:bg-gray-800 rounded-lg shadow-md">
  <form id="subscribe-form" class="space-y-4">
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Subscribe to our newsletter</h3>
    <p class="text-gray-600 dark:text-gray-300">Get the latest posts delivered right to your inbox.</p>
    <div>
      <input
        type="email"
        id="email"
        name="email"
        placeholder="Enter your email"
        required
        class="w-full px-4 py-2 border rounded-md focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
      />
    </div>
    <button
      type="submit"
      class="w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Subscribe
    </button>
  </form>
</div>

<script>
document.addEventListener('astro:page-load', () => {
  const form = document.getElementById('subscribe-form');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = (document.getElementById('email') as HTMLInputElement).value;
    
    // Here you would typically send this to your email service
    // For demo purposes, we'll just show an alert
    alert(`Thanks for subscribing with ${email}! This is a demo - implement your email service integration here.`);
  });
});
</script>